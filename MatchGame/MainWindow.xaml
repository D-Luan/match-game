<Window x:Class="MatchGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <DockPanel x:Name="menuGame" LastChildFill="false" Visibility="Collapsed">
            <Menu DockPanel.Dock="Bottom">
                <MenuItem Header="Back to Menu" Click="BackToMenu_Click"/>
                <MenuItem Header="Restart Game" Click="RestartGame_Click"/>
            </Menu>
        </DockPanel>

        <Grid x:Name="mainInterface" Visibility="Visible">
            <TextBlock Text="Match Game" FontSize="35" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, -150, 0, 0"/>
            <Button Content="PLAY" FontSize="35" Padding="20, 0" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click" />
        </Grid>
        
        <Grid x:Name="mainGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3" MouseDown="TextBlock_MouseDown"/>

            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="3" MouseDown="TextBlock_MouseDown"/>

            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="3" MouseDown="TextBlock_MouseDown"/>

            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="2" MouseDown="TextBlock_MouseDown"/>
            <TextBlock Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="3" MouseDown="TextBlock_MouseDown"/>

            <TextBlock x:Name="timeTextBlock" Text="?" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="4" MouseDown="TimeTextBlock_MouseDown"/>
        </Grid>
    </Grid>
</Window>
